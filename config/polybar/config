### Arrow Modules


[module/arrow1]
; grey to Blue
type = custom/text
content = "%{T3} %{T-}"
content-font = 3
content-foreground = #8D62A9
content-background = #292D3E

[module/arrow2]
; grey to Blue
type = custom/text
content = "%{T3} %{T-}"
content-font = 3
content-foreground = #668BD7
content-background = #8D62A9

[module/arrow3]
; grey to Blue
type = custom/text
content = "%{T3} %{T-}"
content-font = 3
